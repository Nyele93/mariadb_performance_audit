</tr>
{% for host in summary_csv_file.list %}
<tr>
    {% for header in summary_headers.split(",") %}
    <td style="border: 1px solid black; padding: 8px 16px; font-family:Arial; font-size: 13px;">{{ host[header] }}</td>
    {% endfor %}
</tr>
{% endfor %}
</table>
